<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Muscat"
    android:background="@drawable/omblue">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="101dp"
        android:layout_height="156dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/muscat" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="163dp"
        android:layout_height="212dp"
        android:layout_marginStart="16dp"
        android:text="Muscat was established as the capital of the Sultanate of Oman in 1793. The metropolitan area (Muscat Governorate) spans 3,500 square kilometres and includes six provinces (Wilayats) with a population of 1,302,440 (2020 census)"
        android:textColor="#FAF8F8"
        android:textColorLink="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="75dp"
        android:layout_height="54dp"
        android:layout_marginBottom="436dp"
        android:text="Muscat"
        android:textColor="#F6F1F1"
        android:textColorHighlight="#FDF6F6"
        android:textColorHint="#FAF6F6"
        android:textColorLink="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.732"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="162dp"
        android:layout_height="141dp"
        android:text="Governorate of Muscat contains the following six Wilayats:Muscat,Al Amirat ,Al Seeb , Boushar ,Matrah ,Qurayyat"
        android:textColor="#FFFCFC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.197" />


    <Button
        android:id="@+id/buthome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#BF6565"
        android:text="Home"
        android:textColor="#F4EEEE"
        android:textColorHighlight="#FB6060"
        android:textColorHint="#770F0F"
        android:textColorLink="#673AB7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.928"
        app:rippleColor="#985454"
        app:strokeColor="#F3EBEB" />


</androidx.constraintlayout.widget.ConstraintLayout>